@model BOOKSTORE.Data.Introduction
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/css/sb-admin-2.css" rel="stylesheet" />
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Trang Giới Thiệu</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <h3>Sửa thông tin giới thiệu cửa hàng</h3>

                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="FirstImage" class="control-label"></label>
                                    <input type="file" asp-for="FirstImage" class="form-control" />
                                    <img src="~/Picture/@Model.FirstImage" width="600" height="400" />
                                    <span asp-validation-for="FirstImage" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LeftImage" class="control-label"></label>
                                    <input type="file" asp-for="LeftImage" class="form-control" />
                                    <img src="~/Picture/@Model.LeftImage" width="600" height="400" />
                                    <span asp-validation-for="LeftImage" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UpdateLast" class="control-label"></label>
                                    <label asp-for="UpdateLast" class="control-label">Ngày thực hiện: @DateTime.Now.ToString("dd/MM/yyyy")</label>
                                    <span asp-validation-for="UpdateLast" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Lưu" class="btn-warning" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Quay lại</a>
                    </div>

                </table>
            </div>
        </div>
    </div>

