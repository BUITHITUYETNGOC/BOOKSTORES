@model BOOKSTORE.Data.Introduction
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<style>
    .button {
        background: #333;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        margin: 20px;
    }

    .col-md-4 {
          
            width: 1000px; /* Adjust width as needed */
            overflow-y: auto; /* Enable vertical scrolling */
            max-height: calc(100vh - 100px);
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom:   15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="file"],
        input[type="date"] {
            width: 100%;
            padding:   8px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
</style>
<h1>Thêm</h1>

<h4>Thông tin giới thiệu cửa hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstImage" class="control-label"></label>
                <input type="file" asp-for="FirstImage" class="form-control" />
                <span asp-validation-for="FirstImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeftImage" class="control-label"></label>
                <input type="file" asp-for="LeftImage" class="form-control" />
                <span asp-validation-for="LeftImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateLast" class="control-label">Ngày thực hiện</label>
                <input type="date" asp-for="UpdateLast" class="form-control" />
                <span asp-validation-for="UpdateLast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="button">Quay lại</a>
</div>

