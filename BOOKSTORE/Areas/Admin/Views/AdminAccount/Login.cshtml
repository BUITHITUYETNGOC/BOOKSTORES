@model BOOKSTORE.Models.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BOOKSTORE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BOOKSTORE.styles.css" asp-append-version="true" />
</head>
<head>
    <link rel="stylesheet" href="~/css/dangnhap.css" />
    <link rel="stylesheet" href="~/css/thongbao.css" />
</head>
<div class="container text-center mt-5">
    <h2 class="display-4 text-primary mb-4">Đăng Nhập</h2>

    <!-- Hiển thị hộp thoại lỗi chỉ khi có lỗi -->
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
    {
        <div class="error-box">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="Email">Tên đăng nhập</label>
            <input asp-for="Email" class="form-control" placeholder="Nhập Email" />
            
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
            
        </div><br />
        <button type="submit" class="btn btn-lg btn-primary mx-3 px-4 py-2 btn-hover">Đăng Nhập</button>
        <button type="button" class="btn btn-danger btn-lg mx-3 px-4 py-2 btn-hover" onclick="history.back()">Quay lại</button>
    </form>
</div>

