@model BOOKSTORE.Data.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";

}
<link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/css/sb-admin-2.css" rel="stylesheet" />
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Sản Phẩm</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <div>
                        <h3>Chi tiết sản phẩm</h3>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UnitPrice)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Sl)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Sl)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Author)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Author)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Status)
                            </dd>
                            <dt class="col-sm-2">
                                <label>Ngày thực hiện</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UpdateLast)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Image)
                            </dt>
                            <dd class="col-sm-10">
                                <img src="~/Picture/@Model.Image" width="400" />
                            </dd>
                            <dt class="col-sm-2">
                                <label>Thể loại</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Category.Id)
                            </dd>
                            <dt class="col-sm-2">
                                <label>Nhà cung cấp</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Supplier.Id)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-warning">Sửa</a> |
                        <a asp-action="Index">Quay lại</a>
                    </div>
                </table>
            </div>
        </div>
    </div>

