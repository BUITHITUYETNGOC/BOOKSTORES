@model BOOKSTORE.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/css/dangnhap.css" />
</head>
<div class="container text-center mt-5">
    <h2 class="display-4 text-primary mb-4">Đăng Ký</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label for="Name">Tên đăng nhập</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Nhập Lại Mật khẩu</label>
            <input asp-for="ConfirmPassword" type="Password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div><br>
        <button type="submit" class="btn btn-lg btn-primary mx-3 px-4 py-2 btn-hover">Đăng Ký</button>
        <button type="button" class="btn btn-danger btn-lg mx-3 px-4 py-2 btn-hover" onclick="history.back()">Quay lại</button>
    </form>
</div>
