@model BOOKSTORE.Models.LoginModel

@{
     ViewData["Title"] = "Login"; 
}
<head>
    <link rel="stylesheet" href="~/css/dangnhap.css" />
</head>
<div class="container text-center mt-5">
    <h2 class="display-4 text-primary mb-4">Đăng Nhập</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="Name">Tên đăng nhập</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div><br />
        <button type="submit" class="btn btn-lg btn-primary mx-3 px-4 py-2 btn-hover">Đăng Nhập</button>
        <button type="button" class="btn btn-secondary btn-lg mx-3 px-4 py-2 btn-hover" onclick="history.back()">Quay lại</button>
    </form>
</div>
