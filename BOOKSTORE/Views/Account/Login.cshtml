@model BOOKSTORE.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="container text-center mt-5">
    <h2 class="display-4 text-primary mb-4">Đăng Nhập</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="Name">Tên đăng nhập</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary mx-3 px-4 py-2 btn-hover">Đăng Nhập</button>
    </form>
</div>

<style>
    body {
        background: linear-gradient(to right, #ffffff, #007FFF);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 40px 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
    }

    .btn-hover {
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-hover:hover {
            transform: translateY(-3px);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
