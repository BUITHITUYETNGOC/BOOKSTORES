@{
    ViewData["Title"] = "Trang chủ";
}

@model IEnumerable<BOOKSTORE.Data.Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body, h1, h2, h3, h4, h5, h6, .w3-wide {
            font-family: "Montserrat", sans-serif;
        }

        .mySlides {
            display: none;
        }

        .w3-left, .w3-right, .w3-badge {
            cursor: pointer;
        }

        .w3-badge {
            height: 10px;
            width: 20px;
            padding: 0;
        }
    </style>
</head>
<body>

    <!--Thể Loại-->
    <main role="main" class="pb-3">
        <div class="w3-padding-60 w3-large w3-text-grey" style="font-weight:bold; margin-top:20px; text-align: center;">
            <a class="w3-button w3-yellow" asp-action="Index" asp-route-categoryId="KD">Kinh dị</a>
            <a class="w3-button w3-orange" asp-action="Index" asp-route-categoryId="KH">Khoa học</a>
            <a class="w3-button w3-pink" asp-action="Index" asp-route-categoryId="NA">Nấu ăn</a>
            <a class="w3-button w3-green" asp-action="Index" asp-route-categoryId="TN">Thiếu nhi</a>
            <a class="w3-button w3-blue" asp-action="Index" asp-route-categoryId="TT">Truyện tranh</a>
            <a class="w3-button w3-yellow" asp-action="Index" asp-route-categoryId="TTH">Trinh thám</a>
            <a class="w3-button w3-orange" asp-action="Index" asp-route-categoryId="TTT">Tiểu thuyết</a>
        </div>
        <img src="~/Picture/onl.png" alt="Hình ảnh" width="1280" height="200" style="display: block; margin: 20px auto;">
        <!--phần thêm-->
        <div class="main" style="margin-top: 10px; display: flex;">
            <!-- Phần slider ở bên trái -->
            <div class="w3-content w3-display-container" style="max-width: 768px; flex-grow: 1;">
                <img class="mySlides" src="~/Picture/anh1.jpg" alt="Slide 1" style="width:100%">
                <img class="mySlides" src="~/Picture/anh2.jpg" alt="Slide 2" style="width:100%">
                <img class="mySlides" src="~/Picture/anh3.jpg" alt="Slide 3" style="width:100%">
                <img class="mySlides" src="~/Picture/anh4.jpg" alt="Slide 4" style="width:100%">
                <div class="w3-center w3-container w3-section w3-large w3-text-white w3-display-bottommiddle" style="width:100%">
                    <button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
                    <button class="w3-button w3-display-right" onclick="plusDivs(1)">&#10095;</button>
                    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(1)"></span>
                    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(2)"></span>
                    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(3)"></span>
                    <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(4)"></span>
                </div>
            </div>



            <!-- Phần hình ảnh và liên kết bên phải -->
            <div class="right-images" style="display: flex; flex-direction: column; margin-left: 20px;">
                <a class="w3-button w3-yellow" asp-action="Index" asp-route-status="Mới" style="display: inline-block; text-align: center; border-radius: 10px; border: 3px solid green;margin-bottom: 20px;">
                    <img src="~/Picture/anh1.jpg" alt="Hình ảnh 1" style="width: 200px; margin-bottom: 10px; display: block;">
                    <span style="display: block; font-size: 20px; font-weight: bold;">Sách mới của BOOKSTORE</span>
                </a>
                <a class="w3-button w3-red" asp-action="Index" asp-route-categoryId="KD" style="display: inline-block; text-align: center; border-radius: 10px; border: 3px solid green;margin-bottom: 20px;">
                    <img src="~/Picture/anh1.jpg" alt="Hình ảnh 2" style="width: 200px; margin-bottom: 10px; display: block;">
                    <span style="display: block; font-size: 20px; font-weight: bold;">Best seller</span>
                </a>
                <a class="w3-button w3-blue" asp-action="Index" asp-route-status="Sale" style="display: inline-block; text-align: center; border-radius: 10px; border: 3px solid green;">
                    <img src="~/Picture/anh1.jpg" alt="Hình ảnh 3" style="width: 200px; margin-bottom: 10px; display: block;">
                    <span style="display: block; font-size: 20px; font-weight: bold;">Giảm giá</span>
                </a>
            </div>


        </div>
        <!--kết thúc phần thêm-->

            <div class="container" style="margin: 100px">
                <div class="w3-row w3-grayscale" id="bookContainer">
                    @if (Model.Any())
                    {

                        @foreach (var item in Model)
                        {
                            <!-- Hiển thị sản phẩm, sách sẽ được chèn tự động vào đây -->
                            <div class="w3-col l3 s6">
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">
                                <div class="w3-container">
                                    <div class="w3-display-container">
                                        <img src="~/Picture/@item.Image" alt="@item.Name" style="width:100%">
                                        <span class="w3-tag w3-display-topleft">@item.Status</span>
                                        <div class="w3-display-middle w3-display-hover">
                                            <button class="add-to-cart w3-button w3-black" data-id="@item.Id">Thêm vào<i class="fa fa-shopping-cart"></i></button>
                                        </div>
                                    </div>
                                    <p>@item.Name<br><b>@item.UnitPrice</b></p>
                                </div>
                                </a>
                            </div>
                        }

                    }
                    else
                    {
                        <p>Không có sản phẩm nào thuộc danh mục này.</p>
                    }
                </div>
            </div>

            <footer class="w3-padding-30 w3-light-grey w3-small w3-center" id="footer">
                <div class="w3-row-padding">
                    <div class="w3-two">
                        <h3>TAGS PHỔ BIẾN</h3>
                        <p id="tagContainer">
                            <!-- Tags sẽ được chèn tự động vào đây không chỉnh sửa -->

                        </p>
                    </div>
                </div>
            </footer>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        //khởi tạo giá trị bằng 1
        let slideIndex = 1;
        showDivs(slideIndex);

        //số slide cần chuyển
        function plusDivs(n) {
            showDivs(slideIndex += n);
        }
        //cụ thể là n
        function currentDiv(n) {
            showDivs(slideIndex = n);
        }

        //Cập nhật chấm tròn
        function showDivs(n) {
            const x = document.getElementsByClassName("mySlides");

            const dots = document.getElementsByClassName("demo");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (let i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            for (let i = 0; i
                < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" w3-white", "");
            }
            x[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " w3-white";

        }

        // Tự động chuyển slide sau 2 giây
        let autoSlideInterval = setInterval(function () {
            plusDivs(1);
        }, 2000);

        const tags = ["KHOA HỌC VIỄN TƯỞNG", "New York", "Tiểu thuyết", "ANIME", "Manhwa", "CONAN", "MANGA", "Baby", "HARRY POTTER", "News", "Clothing", "Bí quyết của người giàu", "Sports", "Games"];
        const tagContainer = document.getElementById('tagContainer');
        tagContainer.innerHTML = tags.map(tag => `<span class="w3-tag w3-grey w3-small w3-margin-bottom">${tag}</span>`).join(' ');

    </script>
</body>
</html>
